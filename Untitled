class Node:
	on_off = false
	pulse_length = .0002
	wave_length = .5
	iteration = 0
	system_period = .000001
	def set_wave_length(self, x):
		self.wave_length = x
	def set_pulse_length(self,x):
		self.pulse_length = x
	def send_state(self):
		if on_off:
			if self.iteration > (self.wave_length/self.system_period):
				self.iteration = 0
			if (self.iteration * system_period) <  pulse_length:
				self.iteration = self.iteration + 1
				return true
			else:
				self.iteration = self.iteration + 1
				return false
		else:
			self.iteration = 0
			return false
